{% extends "common/mobile-index.phtml" %}
{% block title  %}兼职之家 - 发布岗位{% endblock %}

{% block content %}
<style type="text/css">
	body,html {
		background: #fff;
	}
	.statbox img.auto-center {
		max-width: 90%;
	}
	.resu {
		padding:0;
	}
	
	.imgbox {
	    margin: 0 auto;
	    margin-top: 10px;
	}
	.col-xs-6 button {
		display: block;
		width: 100%;
	    height: 3rem;
	    line-height: 2rem;
	    background: #f07527;
	    color: #fff;
	    font-size: 1.8rem;
	    text-align: center;
	    border-radius: 3rem;
	    margin: 0 auto;
	    margin-top: 2rem;
